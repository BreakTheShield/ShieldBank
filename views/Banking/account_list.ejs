<%- include("common/header") %>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-danger">계좌목록</h4>
        <form action="/bank/account_list/create" method="post">
            <button class="btn btn-user  float-right" type="submit"  id="createAccount" value="submit" style="background-color:#b937a4 !important; color:white !important;">신규 계좌 생성</button>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <%- html %>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>계좌 번호</th>
                        <th>잔액</th>
                        <th>은행코드</th>
                        <!-- 원하는 다른 열 추가 가능 -->
                    </tr>
                </thead>
                <tbody>
                    <% if (html_data && html_data.length > 0) { %>
                        <% html_data.forEach(account => { %>
                            <tr>
                                <td><%= account.account_number %></td>
                                <td><%= account.balance %></td>
                                <% if(account.bank_code == 555){ %>
                                    <td><%= "쉴드은행" %></td>
                                <% }else { %>
                                    <td><%= "창칼은행" %></td>
                                <% } %>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="3">계좌가 없습니다.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
</div>

<%- include("common/footer") %>


                    
                