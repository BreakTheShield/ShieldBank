<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EED9F6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/qna_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지작성"
                android:textColor="#000000"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/qna_write_btn"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:background="@drawable/share_round_popup"
                android:onClick="writeFinish"
                android:text="완료"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ntw_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/input_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/ntw_btn_file_add"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:background="@drawable/share_round_popup"
            android:text="첨부파일"
            android:onClick="fileUpload"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ntw_filename"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/input_white"
            android:hint="파일을 첨부해주세요"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ntw_content"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/input_white"
            android:hint="내용을 작성해주세요"
            android:gravity="top"/>
    </LinearLayout>

</LinearLayout>