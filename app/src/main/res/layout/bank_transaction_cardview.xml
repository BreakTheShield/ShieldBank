<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/frame"
        tools:ignore="MissingConstraints"
        >

        <!-- 왼쪽 그룹: 송금은행과 송금계좌 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_transaction_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이체시간"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/text_view_transaction_sender_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="송금은행"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/text_view_transaction_sender_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="송금계좌"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/text_view_transaction_empty_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <!-- 오른쪽 그룹: 수취은행과 수취계좌 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_transaction_empty_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/text_view_transaction_receiver_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수취은행"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/text_view_transaction_receiver_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수취계좌"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/text_view_transaction_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금액"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>